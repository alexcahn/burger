<h1>Eat-Da-Burger!</h1>

<img src="/images/burgerpic.jpg" alt="burgerpic">

<main>

<div class="orderBurger">
<h2>Order A Burger!</h2>
<form action="/burgers" method="POST">
  <input type="text" id="orderBurger" name="burger_name" placeholder="Enter a burger to order">
  <button type="submit" class="addBurgerButton">Submit Order</button>
</form>
</div>

  <div class="burgersAvailable">
    <h2>Pick Up Your Burger</h2>
{{#each burgers}}
{{#unless this.devoured}}
<div>
  {{this.burger_name}}
  <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
    <button type="submit" class='burgerAvailable'>Devour Burger</button>
  </form>
</div>
{{/unless}}
{{/each}}
  </div>

<div class="eatenBurgers">
  <h2>Devoured Burgers</h2>
{{#each burgers}}
{{#if this.devoured}}
<div class='burgerEaten'>
  {{this.burger_name}}
</div>
{{/if}}
{{/each}}
</div>

</main>